{
	"name": "@clerc/monorepo",
	"private": true,
	"packageManager": "pnpm@8.6.12",
	"scripts": {
		"build": "rimraf packages/*/dist && pnpm -r run build",
		"lint": "eslint . && prettier . --check",
		"lint:fix": "eslint . --fix && prettier . --write",
		"prepublishOnly": "nr build",
		"release": "bumpp package.json packages/*/package.json --commit --push --tag && nr build && pnpm publish -r --filter ./packages/*",
		"test": "vitest",
		"typecheck": "tsc --noEmit",
		"watch": "pnpm -r --parallel run watch"
	},
	"devDependencies": {
		"@antfu/ni": "^0.21.5",
		"@so1ve/eslint-config": "^0.119.0",
		"@so1ve/prettier-config": "^0.119.0",
		"@types/node": "^18.17.1",
		"bumpp": "^9.1.1",
		"eslint": "^8.46.0",
		"pkgroll": "^1.10.0",
		"prettier": "^3.0.0",
		"rimraf": "^3.0.2",
		"typescript": "^5.1.6",
		"vite": "^4.4.7",
		"vitest": "^0.34.2"
	}
}
