{
	"name": "@clerc/monorepo",
	"private": true,
	"version": "0.44.0",
	"packageManager": "pnpm@10.24.0",
	"type": "module",
	"scripts": {
		"bench": "vitest bench",
		"build": "pnpm -r run build",
		"lint": "eslint . && prettier . --check",
		"lint:fix": "eslint . --fix && prettier . --write",
		"prepublishOnly": "nr build",
		"release": "bumpp package.json packages/*/package.json --commit --push --tag && nr build && pnpm publish -r --filter ./packages/*",
		"test": "vitest",
		"test:coverage": "vitest --coverage",
		"test:ui": "vitest --ui",
		"typecheck": "tsgo --noEmit",
		"watch": "pnpm -r --parallel run watch"
	},
	"devDependencies": {
		"@antfu/ni": "^28.0.0",
		"@clerc/test-utils": "workspace:*",
		"@so1ve/eslint-config": "^3.17.0",
		"@so1ve/prettier-config": "^3.17.0",
		"@types/node": "^24.10.1",
		"@typescript/native-preview": "7.0.0-dev.20250812.1",
		"@vitest/coverage-istanbul": "^4.0.15",
		"@vitest/ui": "^4.0.15",
		"bumpp": "^10.3.2",
		"eslint": "^9.39.1",
		"prettier": "^3.7.3",
		"tsdown": "^0.16.8",
		"typescript": "^5.9.3",
		"vite": "^7.2.6",
		"vite-tsconfig-paths": "6.0.0-beta.4",
		"vitest": "^4.0.15"
	}
}
