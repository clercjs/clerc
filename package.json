{
	"name": "@clerc/monorepo",
	"private": true,
	"version": "1.0.0-beta.17",
	"packageManager": "pnpm@10.24.0",
	"type": "module",
	"scripts": {
		"bench": "vitest bench",
		"build": "tsdown",
		"docs:build": "pnpm -C docs build",
		"docs:dev": "pnpm -C docs dev",
		"docs:generate": "pnpm -C docs generate",
		"docs:preview": "pnpm -C docs preview",
		"lint": "eslint . && prettier . --check",
		"lint:fix": "eslint . --fix && prettier . --write",
		"prepublishOnly": "nr build",
		"release": "bumpp package.json packages/*/package.json --commit --push --tag",
		"test": "vitest",
		"test:all": "nr test && nr test:typecheck",
		"test:coverage": "vitest --coverage",
		"test:typecheck": "vitest --typecheck",
		"test:ui": "vitest --ui",
		"typecheck": "nr typecheck:isolated && nr typecheck:non-isolated && nr typecheck:docs",
		"typecheck:docs": "pnpm -C docs typecheck",
		"typecheck:isolated": "tsgo -p tsconfig.isolated.json",
		"typecheck:non-isolated": "tsc -p tsconfig.non-isolated.json",
		"watch": "tsdown --watch"
	},
	"devDependencies": {
		"@antfu/ni": "^28.0.0",
		"@clerc/test-utils": "workspace:*",
		"@so1ve/eslint-config": "^3.19.0",
		"@so1ve/prettier-config": "^3.19.0",
		"@types/node": "^24.10.1",
		"@typescript/native-preview": "7.0.0-dev.20251211.1",
		"@vitest/coverage-istanbul": "^4.0.15",
		"@vitest/ui": "^4.0.15",
		"bumpp": "^10.3.2",
		"changelogithub": "^14.0.0",
		"clerc": "workspace:*",
		"eslint": "^9.39.1",
		"prettier": "^3.7.3",
		"tsdown": "^0.16.8",
		"typescript": "^5.9.3",
		"vite": "^7.2.6",
		"vite-tsconfig-paths": "6.0.0-beta.4",
		"vitest": "^4.0.15",
		"vitest-console": "^0.2.1"
	}
}
