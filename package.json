{
	"name": "@clerc/monorepo",
	"private": true,
	"version": "0.44.0",
	"packageManager": "pnpm@10.23.0",
	"scripts": {
		"build": "pnpm -r run build",
		"lint": "eslint . && prettier . --check",
		"lint:fix": "eslint . --fix && prettier . --write",
		"prepublishOnly": "nr build",
		"release": "bumpp package.json packages/*/package.json --commit --push --tag && nr build && pnpm publish -r --filter ./packages/*",
		"test": "vitest",
		"typecheck": "tsgo --noEmit",
		"watch": "pnpm -r --parallel run watch"
	},
	"devDependencies": {
		"@antfu/ni": "^27.0.1",
		"@so1ve/eslint-config": "^3.14.0",
		"@so1ve/prettier-config": "^3.14.0",
		"@types/node": "^24.10.1",
		"@typescript/native-preview": "7.0.0-dev.20250812.1",
		"bumpp": "^10.3.1",
		"clerc": "workspace:*",
		"eslint": "^9.39.1",
		"prettier": "^3.6.2",
		"tsdown": "^0.16.6",
		"typescript": "^5.9.3",
		"vite": "^7.2.4",
		"vitest": "^4.0.12"
	}
}
